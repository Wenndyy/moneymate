<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutBudget"

    android:weightSum="2"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_weight="1"
        android:gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:padding="6dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_box_icon_budget">
            <ImageView
                android:id="@+id/categoryImage"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/ic_default"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/categoryName"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/amount"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000,00"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_light"
                android:textSize="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/layoutFoodProgress"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="10dp">

            <ProgressBar
                android:id="@+id/progressFood"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/progress_drawable"
                android:layout_centerInParent="true"
                android:secondaryProgressTint="#FFF6F6F6"
                android:progressTint="@color/primary"/>

            <TextView
                android:padding="4dp"
                android:id="@+id/tvFoodPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0%"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_light"
                android:textSize="10dp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/detailFood"
            android:layout_width="11dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_right"/>
    </LinearLayout>
</LinearLayout>