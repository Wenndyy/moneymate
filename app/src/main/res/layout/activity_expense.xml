<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/expenseScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fitur"
    tools:context=".view.expense.ExpenseActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingTop="24dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/secondry">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="2"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginEnd="24dp">
                    <TextView
                        android:id="@+id/toolbarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expense"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:fontFamily="@font/poppins_semibold" />

                    <TextView
                        android:id="@+id/toolbarSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organize your expenses well"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>



        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/appbar">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            android:layout_marginBottom="26dp"
            android:elevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"  >
                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <LinearLayout
                    android:layout_marginTop="18dp"
                    android:id="@+id/layout_category"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_category_icon"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/img_category"
                        android:layout_width="41.56dp"
                        android:layout_height="41.56dp"
                        android:src="@drawable/ic_food"/>

                    <TextView
                        android:id="@+id/category_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="12sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/amountLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Amount"
                    android:textSize="14dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/amountTextEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Amount"
                    android:padding="12dp"
                    android:background="@drawable/edittext_fitur_border"
                    android:layout_marginBottom="10dp" />
                <TextView
                    android:id="@+id/dateLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="14dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/DateTextEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date"
                    android:padding="12dp"
                    android:background="@drawable/edittext_fitur_border"
                    android:layout_marginBottom="26dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginRight="60dp"
                        android:id="@+id/cancelButton"
                        android:layout_width="99dp"
                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:gravity="center"
                        android:background="@drawable/bg_button_confirm"
                        >
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:fontFamily="@font/poppins_medium"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:id="@+id/submitButton"
                        android:layout_width="99dp"
                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:gravity="center"
                        android:background="@drawable/bg_button_confirm"
                        >
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Submit"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:fontFamily="@font/poppins_medium"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>