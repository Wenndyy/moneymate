<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/categoryExpenseScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fitur"
    tools:context=".view.expense.CategoryExpenseActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingTop="24dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/secondry">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="2"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginEnd="24dp">
                    <TextView
                        android:id="@+id/toolbarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expense"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:fontFamily="@font/poppins_semibold" />

                    <TextView
                        android:id="@+id/toolbarSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organize your expenses well"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>



        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/appbar">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            android:layout_marginBottom="26dp"
            android:elevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"  >
                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Category"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <GridLayout
                    android:id="@+id/categoryGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="3"
                    android:layout_gravity="center"

                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/titleText">
                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="17dp"
                        android:id="@+id/food_category"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_category_icon"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_food"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Food"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/groceries_category"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_category_icon"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_groceries"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Groceries"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_gravity="end"
                        android:id="@+id/lifestyle_category"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_category_icon"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_lifestyle"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lifestyle"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/beauty_category"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_category_icon"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_beauty"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beauty"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/tax_category"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_category_icon"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_tax"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tax"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_gravity="end"
                        android:id="@+id/education_category"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_category_icon"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_education"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Education"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginTop="17dp"
                        android:layout_marginRight="17dp"
                        android:id="@+id/residential_category"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_category_icon"
                        android:padding="7dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_residential"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Residential"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </GridLayout>
                <com.google.android.material.button.MaterialButton
                    android:layout_gravity="center"
                    android:id="@+id/nextButton"
                    android:layout_width="232dp"
                    android:layout_height="44dp"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="54dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:cornerRadius="24dp"
                    android:textSize="22dp"
                    android:fontFamily="@font/poppins_bold"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:backgroundTint="@null"
                    android:backgroundTint="@null"
                    android:background="@drawable/button_gradient"
                    app:rippleColor="#33FFFFFF"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>